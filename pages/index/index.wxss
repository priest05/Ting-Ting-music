/**index.wxss**/
/* 搜索框区域 */
.search-container{
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 10rpx 20rpx;
    background-color: #ddd;
    box-sizing: border-box;
}
.search{
    flex: 2;
    background-color: #eee;
    border-radius: 40rpx;
    padding-right: 40rpx;
    box-sizing: border-box;
}
.search image{
    width: 48rpx;
    height: 48rpx;
    padding: 10rpx 20rpx;
    vertical-align: middle;
}
.search input{
    display: inline-block;
    vertical-align: middle;
    width: calc(100%-88rpx);
}
/* 轮播图区域 */
.banner{
    height: 300rpx;
}
.swiper-img{
    width: 100%;
    height: 100%;
}
/* 推荐歌单 */
.recommend-content{
    width: 100%;
    height: 325rpx;
    margin-top: 10rpx;
    padding: 10rpx 0rpx; 
}
.title{
    padding-left: 30rpx;
    font-size: 30rpx;
    font-weight: bold;
    font-family: "Microsoft Yahei", Arial, Helvetica, sans-serif;
}
.scrollView{
    width: 100%;
    white-space: nowrap;
    margin-top: 15rpx;
}
.listContainer{
    display: inline-block;
    transition: padding 0.3s ease;
}
.listItem{
    display: inline-block;
    width: 200rpx;
    margin-right: 20rpx;
    position: relative;
}
.listItem:nth-last-child(1){
    margin-right: 0;
}
.coverImg{
    width: 200rpx;
    height: 200rpx;
    border-radius: 12rpx;
}
.playCount{
    position: absolute;
    height: 26rpx;
    top: 8rpx;
    left: 8rpx;
    line-height: 26rpx;
    padding: 4rpx 6rpx;
}
.playcountIcon{
    width: 26rpx;
    height: 26rpx;
    vertical-align: middle;
}
.playCount .text{
    display: inline-block;
    margin-left: 6rpx;
    font-family: "Microsoft Yahei", Arial, Helvetica, sans-serif;
    color: #ffffff;
    font-size: 20rpx;
    font-weight: normal;
}
.play{
    position: absolute;
    top: 155rpx;
    right: 5rpx;
}
.playIcon{
    width: 40rpx;
    height: 40rpx;
}
.listName{
    /* height: 50rpx; */
    font-size: 24rpx;
    color: #000000;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
    line-height: 1.4;
    height: 1.4em*2;
    min-height: 60rpx;
    white-space: normal;
    font-family: "Microsoft Yahei", Arial, Helvetica, sans-serif;
}
/* 热门歌曲 */
.hotsong-container{
    width: 100%;
    height: 100%;
    margin-top: 10rpx;
}
.songContent{
    width: 100%;
    margin-top: 15rpx;
}
.songItem{
    position: relative;
    display: flex;
    align-items: center;
    width: 100%;
    height: 110rpx;
    padding: 5rpx 25rpx;
}
.songItem:first-child{
    padding-top: 0rpx;
}
.songImg{
    width: 100rpx;
    height: 100rpx;
    border-radius: 12rpx;
}
.songDetail{
    width: 600rpx;
    margin-left: 30rpx;
}
.songName{
    font-size: 27rpx;
    font-weight: bold;
    letter-spacing: 1rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
}
.singerAlbum{
    margin-top: 10rpx;
    font-size: 23rpx;
    width: 450rpx;
    color: #707070;
    letter-spacing: 1rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}
.songPlay{
    position: absolute;
    width: 30rpx;
    height: 15rpx;
    left: 670rpx;
}
.songPlay image{
    width: 30rpx;
    height: 15px;
}





