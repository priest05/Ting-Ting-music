/* pages/play/play.wxss */
.play-container{
    width: 100%;
    height: 100vh; 
    background-color: rgb(190, 184, 184);
    display: flex;
    flex-direction: column;
    overflow: hidden;
}
.disc-container{
    width: 100%;
    height: 50vh;
    display: flex;
    justify-content: center;
    align-items: center;
}
.cover{
    display: inline-block;
    width: 300rpx;
    height: 300rpx;
    border-radius: 50%;
    border: 80rpx solid #444444;
}
.swiper-container{
    flex:1;  
}
.song-content{
    display: flex;
    width: 100%;
    height: 100rpx;
    position: relative;
    align-items: center;
}
.song-meta{
    margin-left: 15rpx;
    text-align: center;
    width: 300rpx;
}
.current-title{
    display: block;
    font-size: 35rpx;
    font-weight: bold;
    color:gray;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}
.current-singer{
    font-size: 30rpx;
    color: gray;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}
.song-action{
    display: flex;
    justify-content: center;
    align-items: center;
    position: absolute;
    right: 30rpx;
}
.action-btn{
    width: 80rpx;
    height: 80rpx;
    margin: 20rpx;
    border-radius: 50%;
    transition: all 0.3 ease;
}
.action-icon{
    width: 70rpx;
    height: 70rpx;
}
.progress-container{
    width: 100%;
    padding: 0 40rpx;
    margin: 40rpx 0 0 0;
    box-sizing: border-box;
}
.progress-bar{
    height: 10rpx;
    position: relative;
    border-radius: 5rpx;
}
.progress-bg{
    position: relative;
    background-color: gray;
    height: 10rpx;
    border-radius: 5rpx;
}
.progress{
    position: absolute;
    height: 100%;
    background: #cc0000;
    border-radius: 5rpx;
    transition: width 0.1s linear;
    box-shadow: 0 0 10rpx rgba(204,0,0,0.3);
}
.progress-handle{
    position: absolute;
    left:-6rpx;
    top: 50%;
    transform: translateY(-50%);
    width: 24rpx;
    height: 24rpx;
    width: 16rpx;
    height: 16rpx;
    background: #cc0000;
    border-radius: 10px;
    border: 5rpx solid white;
    box-shadow: 0 0 10rpx rgba(0,0,0,0.3);
}
.time-info{
    display: flex;
    justify-content: space-between;
    margin-top: 20rpx;
    font-size: 24rpx;
    color: gray;
}

