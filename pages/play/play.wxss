/* pages/play/play.wxss */
/* 设置页面根元素高度 */
page {
    height: 100vh;
    overflow: hidden;
}

.play-container{
    width: 100vw;
    height: 100%;
    overflow: hidden;
    box-sizing: border-box;
    margin: 0 auto;
}
.swiper-container{
    width: 100%;
    height: 100%;
    background-color: rgb(190, 184, 184);
}
.play-content {
    display: flex;
    flex-direction: column;
    height: 100%;
    width: 100%;
    padding-bottom: 20rpx;
    box-sizing: border-box;
}
.disc-container{
    display: flex;
    justify-content: center;
    width: 100%;
    flex: 0.95;
    min-height: 0;
    margin-top: 20rpx;
    margin-bottom: 70rpx;
}
.cover{
    display: inline-block;
    width: 85vw;
    height: 85 vw;
    max-width: 450rpx;
    max-height: 450rpx;
    border-radius: 50%;
    border: 10vw solid #444444;
    box-sizing: border-box;
    margin-top: 200rpx;
}
.song-content{
    display: flex;
    width: 100%;
    height: auto;
    min-height: 100rpx;
    margin-bottom: 40rpx;
    align-items: center;
    padding: 10rpx 0rpx;
    box-sizing: border-box;
}
.song-meta{
    margin-left: 40rpx;
    width: 400rpx;
}
.current-title{
    display: block;
    font-size: 36rpx;
    font-weight: bold;
    color:gray;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}
.current-singer{
    font-size: 32rpx;
    color: gray;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}
.song-action{
    display: flex;
    justify-content: center;
    align-items: center;
    position: absolute;
    right: 15rpx;
}
.action-btn{
    width: 80rpx;
    height: 80rpx;
    margin: 0 20rpx;
    border-radius: 50%;
    transition: all 0.3s ease;
}
.action-icon{
    width: 70rpx;
    height: 70rpx;
}
.progress-container{
    width: 100%;
    padding: 0 30rpx;
    margin: 40rpx 0 15rpx;
    box-sizing: border-box;
    flex-shrink: 0;
}
.progress-bar{
    height: 10rpx;
    position: relative;
    border-radius: 5rpx;
}
.progress-bg{
    position: relative;
    background-color: gray;
    height: 10rpx;
    border-radius: 5rpx;
}
.progress{
    position: absolute;
    height: 100%;
    background: #cc0000;
    border-radius: 5rpx;
    box-shadow: 0 0 10rpx rgba(204,0,0,0.3);
}
.progress-handle{
    position: absolute;
    left:-6rpx;
    top: 50%;
    transform: translateY(-50%);
    width: 24rpx;
    height: 24rpx;
    width: 16rpx;
    height: 16rpx;
    background: #cc0000;
    border-radius: 10px;
    border: 5rpx solid white;
    box-shadow: 0 0 10rpx rgba(0,0,0,0.3);
}
.time-info{
    display: flex;
    justify-content: space-between;
    margin-top: 20rpx;
    font-size: 24rpx;
    color: gray;
}
.footer{
    width: 100%;
    height: 120rpx;
    padding: 15rpx 30rpx;
    margin-top: 20rpx;
    margin-bottom: 10rpx;
    box-sizing: border-box;
}
.control-bar{
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.control-btn{
    width: 80rpx;
    height: 80rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    background-color:aliceblue;
    border-radius: 50%;
    flex-shrink: 0;
}
.control-icon{
    width: 50rpx;
    height: 50rpx;
}
.play-btn{
    width: 100rpx;
    height: 100rpx;
}
.play-icon{
    width: 65rpx;
    height: 65rpx;
}
/* 屏幕自适应设置 */
@media screen and (max-width: 320px) {
    .play-container {
        height: 80vh;
    }
    .disc-container {
        min-height: 40vh;
        margin-top: 10rpx;
    }
    .cover {
        width: 65vw;
        height: 65vw;
        border: 8vw solid #444444;
    }
    .footer{
        height: 130rpx;
    }
    .current-title {
        font-size: 30rpx;
    }
    .current-singer {
        font-size: 26rpx;
    }
    .control-btn {
        width: 65rpx;
        height: 65rpx;
    }
    .play-btn {
        width: 85rpx;
        height: 85rpx;
    }
    .action-btn {
        width: 65rpx;
        height: 65rpx;
        margin: 0 10rpx;
    }
}

/* 大屏设备适配 */
@media screen and (min-width: 430px) {
    .play-container {
        height: 88vh;
    }
    .disc-container {
        min-height: 45vh;
    }
    .cover {
        width: 45vw;
        height: 45vw;
        border: 7vw solid #444444;
    }
    .current-title {
        font-size: 36rpx;
    }
    .current-singer {
        font-size: 32rpx;
    }
    .control-btn {
        width: 80rpx;
        height: 80rpx;
    }
    .control-icon {
        width: 50rpx;
        height: 50rpx;
    }
    .play-btn {
        width: 100rpx;
        height: 100rpx;
    }
    .play-icon {
        width: 65rpx;
        height: 65rpx;
    }
}


